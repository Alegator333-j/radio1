<Page x:Class="radio.Pages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:radio"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Хлебные крошки -->
            <TextBlock Text="Главная / Как заказать" FontSize="14" Margin="0,0,0,20"/>

            <!-- Заголовок -->
            <TextBlock Text="Как оформить заказ в нашем интернет-магазине?" 
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Приветственный текст -->
            <TextBlock Text="Здравствуйте, уважаемый посетитель интернет-магазина Амперо!" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Благодарим Вас за интерес к нашей продукции. Наша команда постоянно работает над тем, чтобы процедура оформления заказов занимала минимум времени, была простой и понятной."
                       Margin="0,0,0,20" TextWrapping="Wrap"/>

            <TextBlock Text="Далее приведены несколько простых шагов, позволяющих Вам оформить заказ на требуемые позиции."
                       Margin="0,0,0,20" TextWrapping="Wrap"/>

            <!-- Раздел для физических лиц -->
            <TextBlock Text="Для физических лиц" FontWeight="Bold" FontSize="16" Margin="0,20,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="20,0">
                <Ellipse Width="20" Height="20" Fill="#FF333333" Margin="0,0,10,0"/>
                <TextBlock Text="Указать количество штук выбранной позиции и нажать 'Добавить в корзину'. Если позиций несколько, добавить их в Корзину поочередно." 
                           TextWrapping="Wrap" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Здесь можно добавить дополнительные шаги оформления заказа -->

        </StackPanel>
    </ScrollViewer>
</Page>
