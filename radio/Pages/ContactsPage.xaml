<Page x:Class="radio.Pages.ContactsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:radio"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ContactsPage">

    <ScrollViewer>
        <!-- Прокрутка, если контент не помещается -->
        <StackPanel Margin="20">
            <!-- "Хлебные крошки" -->
            <TextBlock Text="Главная / Контакты" FontSize="14" Margin="0,0,0,20"/>

            <!-- Информация о магазине в Новогиреево -->
            <TextBlock Text="Магазин: Москва, Новогиреево" FontWeight="Bold" FontSize="16"/>

            <TextBlock Text="Контактные телефоны:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Text="+7 (495) 943-67-00, +7(977) 388-74-10" Margin="20,0"/>

            <TextBlock Text="Email:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Text="support@ampero.ru" Margin="20,0"/>

            <TextBlock Text="Режим работы:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Text="Пн-Пт: 10:00–20:00, Сб-Вс: 10:00–18:00" Margin="20,0"/>

            <TextBlock Text="Адрес:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Text="г. Москва, Свободный проспект, д. 33А, ТЦ 'Новогиреево', 2 этаж" 
                       Margin="20,0" TextWrapping="Wrap"/>

            <!-- Кнопка для карты/проезда -->
            <Button Content="Как добраться" Margin="0,20,0,0" HorizontalAlignment="Left"/>

            <!-- Аналогичный блок для магазина в Мытищах -->
        </StackPanel>
    </ScrollViewer>
</Page>
