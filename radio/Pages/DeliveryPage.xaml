<Page x:Class="radio.Pages.DeliveryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:radio"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeliveryPage">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Навигационная цепочка -->
            <TextBlock Text="Главная / Доставка" FontSize="14" Margin="0,0,0,20"/>

            <!-- Основной заголовок -->
            <TextBlock Text="На нашем сайте интернет-магазина Амперо Вы можете заказать радиодетали и электронные компоненты и оформить доставку в любую точку России!"
                      FontSize="16" FontWeight="Bold" Margin="0,0,0,20" TextWrapping="Wrap"/>

            <TextBlock Text="Точный расчет стоимости доставки происходит после обработки заказа менеджером."
                      Margin="0,0,0,20" TextWrapping="Wrap"/>

            <!-- Способы доставки -->
            <TextBlock Text="Способы доставки:" FontWeight="Bold" FontSize="16" Margin="0,20,0,10"/>

            <!-- Список способов доставки -->
            <StackPanel Margin="20,0">
                <!-- Самовывоз -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="1." FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="Самовывоз из магазинов Амперо (адреса магазинов) - бесплатно"/>
                </StackPanel>

                <!-- Пункты выдачи -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="2." FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="Доставка в пункты выдачи (СДЭК, Яндекс Доставка) по всей России - от 90 рублей;"/>
                </StackPanel>

                <!-- Курьерская доставка -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="3." FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="Курьерская доставка до адреса по всей России - от 290 рублей;"/>
                </StackPanel>

                <!-- Экспресс доставка -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="4." FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="Экспресс доставка (за 2 часа) по Москве и области - от 350 рублей;"/>
                </StackPanel>

                <!-- Почта России -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="5." FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="Доставка ПОЧТОЙ РОССИИ - от 130 рублей."/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
